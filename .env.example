# Kemal WAF Environment Variables
# Copy this file to .env and edit the values

# Upstream server URL (required)
UPSTREAM=http://localhost:8080

# WAF mode: enforce (block) or observe (log only)
OBSERVE=false

# Rules directory
RULE_DIR=rules

# Request body limit (bytes)
BODY_LIMIT_BYTES=1048576

# Rule reload interval (seconds)
RELOAD_INTERVAL_SEC=5

# Config file path (optional, default: config/waf.yml)
CONFIG_FILE=config/waf.yml
